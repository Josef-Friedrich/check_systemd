#! /bin/sh

OUTPUT_FILE="$HOME/.check_systemd_test_output"

if [ -f "$OUTPUT_FILE" ]; then
    OUTPUT="$(cat "$OUTPUT_FILE")"
fi

case $@ in

	'--failed --no-legend')
        if [ -f "$OUTPUT_FILE" ]; then
            echo "$OUTPUT"
        else
            echo "test.service loaded failed failed Test service"
        fi
        rm -f "$OUTPUT_FILE"
		exit 0
		;;

esac
